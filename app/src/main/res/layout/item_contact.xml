<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                    android:layout_height="100dp"
                                    android:layout_margin="5dp"
                                    android:orientation="vertical"
                                    app:cardCornerRadius="4dp"
                                    app:cardElevation="4dp">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@android:color/white">

        <TextView
                android:id="@+id/contactNameC"
                android:layout_width="284dp"
                android:layout_height="46dp"
                android:gravity="center"
                android:text="Radioactive"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="32dp" app:layout_constraintStart_toEndOf="@+id/contactImageC"
        />

        <TextView
                android:id="@+id/contactPhoneC"
                android:layout_width="270dp"
                android:layout_height="40dp"

                android:gravity="center"
                android:text="Imagine Dragons"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@+id/contactNameC" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="32dp"
                app:layout_constraintVertical_bias="0.0"/>
        <ImageView
                android:layout_width="111dp"
                android:layout_height="79dp" tools:srcCompat="@tools:sample/avatars[0]"
                android:id="@+id/contactImageC"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/contactPhoneC"/>

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>